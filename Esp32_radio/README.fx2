flag_00 .. 31 = ....    # () is not default
  autoplay = true/(false)               # start play if STOP is detected
  adc_delog_vol = true/(false)          # make adc-value lineary in 2nd half
  adc_pos_lowp = <num>                  # low pass def:3, (old*3+new)/4
  adc_vol_lowp = <num>                  # low pass def:15, (old*15+new)/16
  adc_vol_reverse = true/(false)        # high-values -> low volume ?
  dsp_brightness = 0..15                # oled+tm1637 brightness
  dsp_show_ip = (true)/false            # show ip on boot
  dsp_show_time = (true)/false          # show clock (tm1637,ht1621)
  enc_direct_switch = true/(false)		# change preset without button
  enc_reverse = true/(false)            # switch left/right on encoder
  grundig_boy100 = (true)/false         # using special pcb for gr.boy100 **
  grundig_matrix_button = (true)/false  # using button matrix of gr.boy100
  ht1621_lcd_type = **                  # display connected to ht1621
  max_preset = <num>                    # divide adc_preset scale
  oled_128x32 = true/(false)            # use 128x32 instead of 128x64
  rotate_screen = true/(false)          # ssd1306 - screen rotation 180°
